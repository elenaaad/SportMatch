<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SportMatch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verde4</item>
        <item name="colorPrimaryVariant">@color/verde5</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/verdeFundal</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/verde1</item>
        <item name="colorSecondaryVariant">@color/verde3</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SportMatch.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SportMatch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SportMatch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SlideActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    </style>


</resources>