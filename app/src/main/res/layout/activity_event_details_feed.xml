<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    tools:context=".EventDetailsActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:fontFamily="monospace"
        android:text="Event Details"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="680dp"
            android:layout_marginBottom="4dp"
            android:background="#FFFFFF"
            android:paddingLeft="60dp"
            android:paddingRight="60dp">


            <ImageView
                android:id="@+id/sportImage"
                android:layout_width="88dp"
                android:layout_height="79dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/volleyball" />

            <TextView
                android:id="@+id/detailsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sportImage"
                android:layout_centerHorizontal="true"
                android:text="TITLE"
                android:textColor="@color/verde4"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailsSport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsTitle"
                android:layout_marginTop="30dp"
                android:text="SPORT:"
                android:textColor="@color/verde4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailsSportInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsTitle"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/detailsSport"
                android:text="Volleyball"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detailsPlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsSport"
                android:layout_marginTop="30dp"
                android:text="NUMBER PLAYERS:"
                android:textColor="@color/verde4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailsPlayersInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsSport"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/detailsPlayers"
                android:text="6 Players"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detailsLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsPlayers"
                android:layout_marginTop="30dp"
                android:text="LOCATION:"
                android:textColor="@color/verde4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailsLocInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsPlayers"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/detailsLoc"
                android:text="Sportfield 1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/detailsBtnMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailsLocInput"
                android:layout_marginStart="80dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/detailsLoc"
                android:text="SEE MAP" />

            <TextView
                android:id="@+id/detailsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsBtnMap"
                android:layout_marginTop="7dp"
                android:text="DATE:"
                android:textColor="@color/verde4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailsDateInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsBtnMap"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/detailsDate"
                android:text="dd/mm/yyyy"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detailsTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsDate"
                android:layout_marginTop="30dp"
                android:text="TIME:"
                android:textColor="@color/verde4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailsTimeInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsDate"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/detailsTime"
                android:text="hh:mm"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detailsDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsTime"
                android:layout_marginTop="30dp"
                android:text="DESCRIPTION:"
                android:textColor="@color/verde4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailsDescInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsTime"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/detailsDesc"
                android:text="description"
                android:textSize="18sp" />

            <Button
                android:id="@+id/detailsBtnParticipate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailsDescInput"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="70dp"
                android:backgroundTint="@color/verde5"
                android:text="Participate"
                android:textSize="22sp" />

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNavigationView"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_background"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:elevation="2dp"
        app:menu="@menu/bottom_menu"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        />


</RelativeLayout>